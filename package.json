{
  "name": "@white-dragon-tools/roblox-studio-hub",
  "version": "0.1.2",
  "description": "WebSocket hub for managing multiple Roblox Studio instances",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "roblox-studio-hub": "dist/index.js"
  },
  "files": [
    "dist",
    "public",
    ".claude-plugin",
    "commands",
    "skills"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/white-dragon-tools/roblox-studio-hub.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsc && rojo build studio-plugin -o dist/StudioHubPlugin.rbxm",
    "prepack": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "rojo:build:plugin": "rojo build studio-plugin -o dist/StudioHubPlugin.rbxm"
  },
  "keywords": [
    "roblox",
    "studio",
    "websocket",
    "hub"
  ],
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "uuid": "^9.0.0",
    "ws": "^8.16.0"
  },
  "optionalDependencies": {
    "node-linux": "^0.1.12",
    "node-mac": "^1.0.1",
    "node-windows": "^1.0.0-beta.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
